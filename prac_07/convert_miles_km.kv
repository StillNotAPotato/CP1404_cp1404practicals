BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: '48'
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment()
            Button:
                text: 'Down'
                on_press: app.handle_decrement()
    Button:
        id: convert_miles_to_km
        font_size: 48
        text: 'Convert m to km'
        on_text_validate: app.handle_update()
    Label:
        id: output_label
        font_size: 48
        text: app.message
        color: (1, 1, 0, 1)
