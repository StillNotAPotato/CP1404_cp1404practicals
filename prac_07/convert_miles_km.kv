BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: '48'
            on_text: app.handle_calculation(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
    Button:
        id: convert_miles_to_km
        font_size: 48
        text: 'Convert m to km'
        on_press: app.handle_calculation()
    Label:
        id: output_label
        font_size: 48
        text: app.output_km
        color: (1, 1, 0, 1)

